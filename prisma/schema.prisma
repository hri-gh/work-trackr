generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Worker {
  id        String      @id @default(uuid())
  name      String
  mobile    String?
  email     String?
  createdAt DateTime    @default(now())
  workEntries WorkEntry[]
}

model WorkEntry {
  id        String   @id @default(uuid())
  workerId  String
  date      DateTime
  amount    Int       // daily amount (duplicated intentionally)
  paid      Boolean   @default(false)
  createdAt DateTime  @default(now())

  worker Worker @relation(fields: [workerId], references: [id])

  @@index([workerId])
  @@index([date])
}
